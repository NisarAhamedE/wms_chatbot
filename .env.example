# WMS Chatbot Configuration Template
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=wms_chatbot
POSTGRES_USER=wms_user
POSTGRES_PASSWORD=your_postgres_password

# Vector Database Configuration (Weaviate)
WEAVIATE_URL=http://localhost:5002
WEAVIATE_API_KEY=your_weaviate_api_key

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_CHAT=azure-gpt-4o
AZURE_OPENAI_DEPLOYMENT_EMBEDDINGS=text-embedding-ada-002
AZURE_OPENAI_MODEL_NAME=gpt-4o

# Application Configuration
APP_NAME=WMS Chatbot System
APP_VERSION=1.0.0
APP_DEBUG=false
APP_LOG_LEVEL=INFO
APP_SECRET_KEY=your_secret_key_here

# Security Configuration
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# File Processing Configuration
MAX_FILE_SIZE_MB=50
SUPPORTED_FILE_FORMATS=txt,doc,docx,pdf,md,xlsx,xls,csv,png,jpg,jpeg,gif,bmp,tiff,html,htm,mp3,wav,mp4,avi,mov
TEMP_DIRECTORY=temp
OUTPUT_DIRECTORY=output

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
OCR_CONFIDENCE_THRESHOLD=30

# Agent Configuration
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=4000
CATEGORIZATION_CONFIDENCE_THRESHOLD=0.7
MANUAL_REVIEW_THRESHOLD=0.8

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_WORKERS=4
API_TIMEOUT=300

# Monitoring and Logging
LOG_FILE_PATH=logs/wms_chatbot.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5
ENABLE_METRICS=true
METRICS_PORT=9091